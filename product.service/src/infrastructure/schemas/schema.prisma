generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String        @id
  name        String
  description String
  price       Float
  currency    String
  image       String
  status      ProductStatus
  createdAt   DateTime
  updatedAt   DateTime

  version_occ Int @map("_version")

  @@map("products")
}

enum ProductStatus {
  AVAILABLE
  UNAVAILABLE
}
